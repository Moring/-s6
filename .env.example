# General
DEBUG=1
SECRET_KEY=dev-secret-key-change-in-production
DJANGO_SECRET_KEY=dev-secret-key-change-in-production
DJANGO_ALLOWED_HOSTS=*
DJANGO_DEBUG=1

# Backend
BACKEND_HOST=backend-api
BACKEND_PORT=8000
BACKEND_BASE_URL=http://backend-api:8000

# Frontend
FRONTEND_PORT=3000
FRONTEND_BASE_URL=http://localhost:3000

# Database (Postgres)
POSTGRES_DB=afterresume
POSTGRES_USER=afterresume
POSTGRES_PASSWORD=afterresume
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://afterresume:afterresume@postgres:5432/afterresume

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000
MINIO_SECURE=False
MINIO_BUCKET=artifacts
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Valkey/Redis
VALKEY_HOST=valkey
VALKEY_PORT=6379
REDIS_URL=redis://valkey:6379/0

# Huey
HUEY_IMMEDIATE=false

# LLM
LLM_PROVIDER=local
LLM_VLLM_ENDPOINT=http://localhost:8001
LLM_MODEL_NAME=mistral-7b

# System Dashboard
SYSTEM_DASHBOARD_ENABLED=True

# Admin (for bootstrap script)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
