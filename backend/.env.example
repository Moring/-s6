# Django Configuration
DJANGO_SETTINGS_MODULE=config.settings.dev
SECRET_KEY=django-insecure-dev-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# For development (default)
# DATABASE_URL=sqlite:///db.sqlite3
# For production (PostgreSQL)
# DATABASE_URL=postgres://user:password@localhost:5432/afterresume

# Redis (for Huey task queue)
REDIS_URL=redis://localhost:6379/0
HUEY_WORKERS=4

# MinIO Object Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=False
MINIO_BUCKET=afterresume

# LLM Configuration
LLM_PROVIDER=local
# For vLLM:
# LLM_PROVIDER=vllm
# LLM_VLLM_ENDPOINT=http://localhost:8000
# LLM_MODEL_NAME=mistral-7b

# System Dashboard
SYSTEM_DASHBOARD_ENABLED=True

# Admin User (for bootstrap script)
# ADMIN_USERNAME=admin
# ADMIN_EMAIL=admin@example.com
# ADMIN_PASSWORD=changeme
